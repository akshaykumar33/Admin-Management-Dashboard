# Server config
PORT=5000
NODE_ENV=development

# MongoDB config
MONGODB_URI=mongodb://localhost:27017/admin_dashboard
# Use your MongoDB Atlas URI if applicable
# MONGODB_URI=mongodb+srv://<username>:<password>@cluster0.mongodb.net/admin_dashboard?retryWrites=true&w=majority

# JWT settings
JWT_SECRET=your_super_secret_key_32_characters_minimum
JWT_EXPIRE=7d

# CORS allowed origins (comma separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Upload settings
MAX_FILE_SIZE=5242880
UPLOAD_PATH=./uploads

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Default admin user (for seeding)
DEFAULT_ADMIN_EMAIL=admin@company.com
DEFAULT_ADMIN_PASSWORD=Admin@123
DEFAULT_ADMIN_USERNAME=admin
